.main-chat
  .main-chat__header
    .main-chat__header__box
      .main-chat__header__box__team-name
        = @group.name
        -# ネルネルネール
      .main-chat__header__box__member
        - @group.users.each do |u|
          = u.name
        -# 鳩ポッポ
    .main-chat__header__right
      .main-chat__header__right__edit
        = link_to edit_group_path(@group.id) do
          Edit
  .main-chat__message-list
    .main-chat__message-list__box
      = render @messages
